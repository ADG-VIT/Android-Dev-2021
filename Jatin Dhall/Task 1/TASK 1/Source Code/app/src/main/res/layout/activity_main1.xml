    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/button9"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/buttondivide"
        android:text="6"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/button6"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/buttondivide"
        android:text="3"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttondot"
        android:layout_width="111dp"
        android:layout_height="94dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="-9dp"
        android:layout_toStartOf="@+id/buttonequals"
        android:text="."
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/button5"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/buttonpercent"
        android:text="2"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/button8"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/buttonpercent"
        android:text="5"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/buttondel"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/buttonpercent"
        android:text="8"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button0"
        android:layout_width="121dp"
        android:layout_height="94dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="-6dp"
        android:layout_toStartOf="@+id/buttondot"
        android:text="0"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/buttondel"
        android:text="1"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/buttondel"
        android:text="4"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/buttonAC"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/buttondel"
        android:text="7"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/buttondel"
        android:text="AC"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttondel"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/buttonpercent"
        android:text="โซ"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttonpercent"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/buttondivide"
        android:text="%"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="CALCULATOR"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="3dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttondivide"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="194dp"
        android:text="รท"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/buttondivide"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-4dp"
        android:text="X"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttonminus"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/buttonX"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-1dp"
        android:text="-"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttonequals"
        android:layout_width="111dp"
        android:layout_height="88dp"
        android:layout_below="@+id/buttonplus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-4dp"
        android:text="="
        android:textSize="30sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/buttonplus"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_below="@+id/buttonminus"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="-1dp"
        android:text="+"
        android:textSize="30sp"
        app:backgroundTint="#000000" />

</RelativeLayout>
